<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WifiSetting">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="와이파이 설정"
        android:textSize="36sp"
        android:textColor="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="36dp"
        android:id="@+id/wifiSettingHeading"
        android:fontFamily="@font/roboto_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리마인더를 쓰실 장소와\n그 장소에서 쓰시는\nWIFI를 선택해주세요."
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/wifiSettingHeading"
        app:layout_constraintLeft_toLeftOf="@id/wifiSettingHeading"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:id="@+id/wifiSettingHeading2"
        android:fontFamily="@font/roboto_medium"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wifiSettingHeading2">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wifiSettingRecyclerView"
            android:layout_marginTop="16dp"/>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>